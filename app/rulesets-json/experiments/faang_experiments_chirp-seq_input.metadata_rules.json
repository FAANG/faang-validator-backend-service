{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "Ruleset for assay type is 'ChIRP-seq'.",
  "title": "FAANG experiment metadata rules for 'ChIRP-seq' input",
  "name": "faang_experiments_chirp-seq_input.metadata_rules",
  "$async": true,
  "type": "object",
  "required": [
    "experiment_target",
    "chip_protocol"
  ],
  "properties": {
    "describedBy": {
      "const": "https://github.com/FAANG/faang-metadata/blob/master/docs/faang_experiment_metadata.md"
    },
    "schema_version": {
      "description": "The version number of the schema in major.minor.patch format.",
      "type": "string",
      "pattern": "^[0-9]{1,}.[0-9]{1,}.[0-9]{1,}$",
      "example": "4.6.1"
    },
    "experiments_core": {
      "description": "Core experiments-level information.",
      "type": "object",
      "$ref": "core/experiments/faang_experiments_core.metadata_rules.json"
    },
    "chirp_target": {
      "type": "object",
      "name": "ChIRP target",
      "description": "None",
      "required": ["text", "term"],
      "properties": {
        "text": {
          "type": "string"
        },
        "term": {
          "type": "string",
          "enum": [
            "GO:0003682",
            "restricted access"
          ]
        },
        "mandatory": {
          "const": "mandatory"
        },
        "ontology_name": {
          "type": "string",
          "enum": ["GO"]
        }
      }
    },
    "chirp_protocol": {
      "type": "object",
      "name": "ChIRP protocol",
      "description": "Link to the ChIRP protocol used.",
      "required": ["value"],
      "properties": {
        "value": {
          "oneOf": [
            {
              "type": "string",
              "format": "uri"
            },
            {
              "const": "restricted access"
            }
          ]
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    },
    "library_generation_max_fragment_size_range": {
      "type": "object",
      "name": "library generation max fragment size range",
      "description": "The maximum fragment size range of the preparation.",
      "required": ["value"],
      "properties": {
        "value": {
          "oneOf": [
            {"type": "number"},
            {"const": "restricted access"}
          ]
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    },
    "library_generation_min_fragment_size_range": {
      "type": "object",
      "name": "library generation min fragment size range",
      "description": "The minimum fragment size range of the preparation.",
      "required": ["value"],
      "properties": {
        "value": {
          "oneOf": [
            {"type": "number"},
            {"const": "restricted access"}
          ]
        },
        "mandatory": {
          "const": "mandatory"
        }
      }
    }
  }
}